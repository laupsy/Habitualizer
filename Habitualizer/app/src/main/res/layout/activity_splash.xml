<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin_splash"
    android:paddingRight="@dimen/activity_horizontal_margin_splash"
    android:paddingTop="@dimen/activity_vertical_margin_splash"
    android:paddingBottom="@dimen/activity_vertical_margin_splash"
    tools:context=".MainActivity">

    <ImageView android:id="@+id/splash"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:src="@drawable/splash"
        android:layout_gravity="center" />

</LinearLayout>
