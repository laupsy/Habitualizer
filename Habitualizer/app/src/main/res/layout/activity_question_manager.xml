<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.laurabarbera.habitualizer.QuestionManager">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="vertical"
        android:id="@+id/qmanager_layout"
        tools:context="com.example.laurabarbera.habitualizer.QuestionManager">

        <TextView android:id="@+id/question_manager_header"
            android:text="@string/manageQuestions_header"
            android:paddingTop="@dimen/header_margin"
            android:paddingBottom="@dimen/header_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:background="@color/header_background2"
            android:textColor="@color/header_text2"
            android:layout_width="match_parent"
            android:textSize="16dp"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/create_new"
            android:visibility="gone"
            android:layout_marginTop="50dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/create_new_help"
                android:text="Hint: Start your question with 'Did', 'Are', or 'Have' For example, 'Did you eat breakfast today?' or 'Have you eaten breakfast today' are analyzeable questions."
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/header_margin"
                android:layout_alignParentLeft="true"
                android:textSize="11dp"
                android:textColor="@color/custom_text_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
                <EditText
                android:id="@+id/create_new_input"
                android:textColor="@color/custom_text"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_width="fill_parent"
                android:layout_below="@id/create_new_help"
                android:layout_height="50dp" />
        </RelativeLayout>

        <Button android:id="@+id/add"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/header_margin"
            android:text="Create New Question"
            android:textColor="@color/button_light_text"
            android:background="@drawable/button" />

        <View android:id="@+id/separator"
            android:background="@color/gray_light"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/header_margin"
            android:layout_width="match_parent" />

    </LinearLayout>

</RelativeLayout>
