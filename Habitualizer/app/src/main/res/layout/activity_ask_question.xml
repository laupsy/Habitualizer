<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.laurabarbera.habitualizer.AskQuestion">

    <TextView android:id="@+id/ask_name"
        android:text=""
        android:gravity="center_horizontal"
        android:textSize="48sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:textColor="@color/ui"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/question_field"
        android:text=""
        android:layout_marginTop="10dp"
        android:layout_below="@id/ask_name"
        android:layout_marginBottom="100dp"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:textColor="@color/custom_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button android:id="@+id/Yes"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/button_height"
        android:layout_below="@id/question_field"
        android:layout_marginTop="@dimen/divider"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="Yes"
        android:textColor="@color/button_dark_text"
        android:background="@drawable/button_alt" />

    <Button android:id="@+id/No"
        android:layout_width="fill_parent"
        android:layout_below="@id/Yes"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="@dimen/divider"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="No"
        android:textColor="@color/button_dark_text"
        android:background="@drawable/button_alt" />

</RelativeLayout>
