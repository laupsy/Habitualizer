<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="HabitualizerTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:colorBackground">@color/background</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/custom_pink</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="colorPrimaryDark">@color/custom_pink_dark</item>
        <item name="android:textColorPrimary">@color/custom_text_title</item>
        <item name="android:actionBarStyle">@style/HabitualizerTheme.ActionBarStyle</item>
        <item name="colorControlNormal">@color/custom_pink</item>
        <item name="colorControlActivated">@color/custom_pink</item>
        <item name="colorControlHighlight">@color/custom_pink</item>
    </style>

    <style name="HabitualizerTheme.ActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:icon">@drawable/icon</item>
    </style>

</resources>
