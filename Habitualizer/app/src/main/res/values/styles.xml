<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="HabitualizerTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:colorBackground">@color/background</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/ui</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="colorPrimaryDark">@color/ui_dark</item>
        <item name="android:textColorPrimary">@color/custom_text_title</item>
        <item name="colorControlNormal">@color/ui</item>
        <item name="colorControlActivated">@color/ui</item>
        <item name="colorControlHighlight">@color/ui</item>
    </style>

</resources>
